+		ztgsm_zap_tx(gsmtmp, s);
+	    }
+
+	    if (gsmspan->span.flags & ZT_FLAG_RUNNING) {
+	        ztgsm_zap_rx(gsmtmp, s);
+	    	ztgsm_span_rx(gsmtmp, s);
+		/* oh zaptel! thou shall receive! */
+		zt_receive(&gsmspan->span);
+	    }
+	} 
+    }
