+
+static struct pci_driver ds1_driver = {
+	name: 	  "ds1x1f",
+	probe: 	  ds1_probe,
+	remove:	  __devexit_p(ds1_remove),
+	suspend:  NULL,
+	resume:   NULL,
+	id_table: ds1_ids,
+};
