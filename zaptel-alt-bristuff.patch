+void cleanup_module(void) {
+    struct qoz_card *tmpcard,*tmplist;
+    int i=0;
+    tmplist = qoz_dev_list;
+    while (tmplist != NULL) {
+	tmplist->dead = 1;
+	qoz_resetCard(tmplist);
+	qoz_undoWD(tmplist);
