+int cwain_waitbusy(struct zt_cwain *cwaintmp) {
+    int x=1000;
+    while (x-- && (cwain_inb(cwaintmp,cwain_R_STATUS) & 1));
+    if (x < 0) {
+	printk(KERN_CRIT "cwain: really busy waiting!\n");
+	return -1;
+    } else {
+	if ((x < 990) && (cwaintmp->ticks > 500)) {
+	    printk(KERN_CRIT "cwain: waited %d\n", 1000 - x);
+	}
+	return 0;
+    }
+}
