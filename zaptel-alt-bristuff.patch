+				      ZT_SIG_FXOGS | ZT_SIG_FXOKS | ZT_SIG_CAS | ZT_SIG_SF;
+		wc->chans[x].pvt = wc;
+		wc->chans[x].chanpos = x + 1;
+	}
+
+	if (zt_register(&wc->span, 0)) 
+	{
+		printk("Unable to register span with zaptel\n");
+		return -1;
+	}
+	return 0;
+}
