+static void __ds1_do_counters(struct t1 *wc)
+{
+	if (wc->alarmtimer) 
+	{
+		if (!--wc->alarmtimer) 
+		{
+			wc->span.alarms &= ~(ZT_ALARM_RECOVER);
+			zt_alarm_notify(&wc->span);
+		}
+	}
+}
