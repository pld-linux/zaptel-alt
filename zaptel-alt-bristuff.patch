+	x = (ioread32(wc->ioaddr + OFS_CTRL) & 0xff) & (val ^ 0xff);			// OR newcontent with all other register data
+
+	iowrite32(x, wc->ioaddr + OFS_CTRL);						// write back register content
+
+	return x;
+}
