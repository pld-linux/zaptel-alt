+		if (alarms & ZT_ALARM_RED)
+			len += snprintf(buf + len, count - len, "RED ");
+		if (alarms & ZT_ALARM_LOOPBACK)
+			len += snprintf(buf + len, count - len, "LOOP ");
+		if (alarms & ZT_ALARM_RECOVER)
