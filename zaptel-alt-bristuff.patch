+    gsmtmp->gsmspan[span].span.alarms = ZT_ALARM_RED;
+    zt_alarm_notify(&gsmtmp->gsmspan[span].span);
+
+    spin_lock_irqsave(&(gsmtmp->lock),flags);
+	gsmtmp->gsmspan[span].led = 0xC0;
+    
